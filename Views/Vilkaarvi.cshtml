@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.WhoWeArePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;


@{
    Layout = "Master.cshtml";
}

<div class="whoweare-page">
    <div class="heading mx-auto">
    <div class="row justify-content-center pt-5">
        <h1 class="p-5">@Model.TextHeading</h1>
    </div>
    </div>

    @foreach (var story in Model.BlocklistStory)
    {
        var contentStory = (ContentModels.CompStory)story.Content;

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col">
                    <h3 class="mt-3 pink-bg p-4 mb-0 rounded-pink-bg">@contentStory.TextPresentation</h3>
                    <img src="@contentStory.Image.GetCropUrl("standard")" class="float-start img-fluid me-3 rounded-img" />
                    <div class="p-2 mt-2 rte"> @contentStory.RteBody </div>
                </div>
            </div>
        </div>
    }
</div>