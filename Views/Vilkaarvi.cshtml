@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.WhoWeArePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;


@{
	Layout = "Master.cshtml";
}
<div class="row justify-content-center mt-5">
    <h1 class="p-5 col-md-7">@Model.TextHeading</h1>
</div>

@foreach (var story in Model.BlocklistStory)
{
    var contentStory = (ContentModels.CompStory)story.Content;

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <h3 class="mt-3 pink-bg p-4 mb-0 rounded-pink-bg">@contentStory.TextPresentation</h3>
                <img src="@contentStory.Image.GetCropUrl("standard")" class="float-start img-fluid me-3 rounded-img" />
                <div class="p-2 mt-2"> @contentStory.RteBody </div>
            </div>
        </div>
    </div>
}